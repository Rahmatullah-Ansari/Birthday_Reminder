<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddEvent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/category"
        android:textColor="@color/teal_200"
        android:layout_alignParentTop="true"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:text="Category"
        tools:ignore="HardcodedText" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_below="@id/category"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content"
        android:id="@+id/radio_group">
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:id="@+id/birthday"
            android:text="Birthday"
            android:textColor="@color/teal_700"
            tools:ignore="HardcodedText" />
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/anniversary"
            android:textSize="16sp"
            android:text="Anniversary"
            android:textColor="@color/teal_700"
            tools:ignore="HardcodedText" />
    </RadioGroup>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_below="@id/radio_group"
        android:hint="Enter name"
        app:hintTextColor="@color/teal_200"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/name_layout"
        tools:ignore="HardcodedText">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_700"
            android:textSize="16sp"
            android:id="@+id/name_label"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_below="@id/name_layout"
        android:layout_marginTop="10dp"
        android:hint="Enter contact"
        app:hintTextColor="@color/teal_200"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/number_layout"
        tools:ignore="HardcodedText">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/teal_700"
            android:id="@+id/number_label"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_below="@id/number_layout"
        android:layout_marginTop="10dp"
        android:hint="Wish Text"
        app:hintTextColor="@color/teal_200"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/wish_layout"
        tools:ignore="HardcodedText">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="250dp"
            android:scrollbars="vertical"
            android:textColor="@color/teal_700"
            android:textSize="16sp"
            android:id="@+id/wish_label"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_below="@id/wish_layout"
        android:layout_marginTop="10dp"
        android:hint="Select date"
        app:hintTextColor="@color/teal_200"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/date_layout"
        tools:ignore="HardcodedText">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="250dp"
            android:scrollbars="vertical"
            android:textColor="@color/teal_700"
            android:textSize="16sp"
            android:id="@+id/date_label"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/save_button"
        android:backgroundTint="#0CFA04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_baseline_check_24"
        tools:ignore="ContentDescription" />
</RelativeLayout>